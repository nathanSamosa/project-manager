{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "react/prop-types": "off"
    },
    "overrides": [
      {
        "files": "src/**/*.js",
        "rules": {
          "quotes": ["error", "single"]
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}